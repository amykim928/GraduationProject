<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header"
        android:background="@color/purple_200"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="13dp"
        android:text="의상 추천 옵션"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/colorTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Color:"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/optionSaveBtn"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <Spinner
        android:id="@+id/colorSpinner"
        android:background="@drawable/spinner"
        android:layout_width="@id/styleSpinner"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:popupBackground="#e7e6e6"
        app:layout_constraintRight_toRightOf="@id/optionSaveBtn"
        app:layout_constraintTop_toTopOf="@id/colorTitle"
        app:layout_constraintBottom_toBottomOf="@id/colorTitle"/>

    <TextView
        android:id="@+id/styleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Style:"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/optionSaveBtn"
        app:layout_constraintTop_toBottomOf="@id/colorTitle" />

    <Spinner
        android:id="@+id/styleSpinner"
        android:background="@drawable/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:popupBackground="#e7e6e6"
        app:layout_constraintRight_toRightOf="@id/optionSaveBtn"
        app:layout_constraintTop_toTopOf="@id/styleTitle"
        app:layout_constraintBottom_toBottomOf="@id/styleTitle"/>

    <Button
        android:id="@+id/optionSaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:background="@drawable/round_rectangle"
        android:paddingLeft="60dp"
        android:paddingTop="8dp"
        android:paddingRight="60dp"
        android:paddingBottom="8dp"
        android:text="추천 옵션 저장"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

</androidx.constraintlayout.widget.ConstraintLayout>